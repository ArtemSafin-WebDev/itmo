include ../data/config.pug
include ../mixins/**/*.pug

block variables

doctype html
html(lang=siteLang)
  head
    include ../parts/head.pug
  body(class=bodyClass class="page-body")
    .preloader
      +icon-multi("logo")(width="200" height="22" class="preloader__logo")
    .page-wrapper
      block header
        include ../parts/header.pug

      block content

      block footer
        include ../parts/footer.pug

  block scripts
    script(src="js/main.js?v=" + siteVersion)
